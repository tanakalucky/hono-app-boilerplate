{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchPackageNames": ["oxlint**"],
      "groupName": "Linter",
      "rangeStrategy": "bump"
    },
    {
      "matchPackageNames": ["oxfmt**"],
      "groupName": "Formatter",
      "rangeStrategy": "bump"
    },
    {
      "matchPackageNames": ["wrangler**", "@cloudflare/**"],
      "groupName": "Cloudflare",
      "rangeStrategy": "bump"
    }
  ]
}
