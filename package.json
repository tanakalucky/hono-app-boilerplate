{
  "name": "hono-app-boilerplate",
  "version": "0.0.0",
  "description": "A template for building a React application with Vite, Hono, and Cloudflare Workers",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "cf-typegen": "wrangler types",
    "check": "bun typecheck && bun run build && wrangler deploy --dry-run",
    "deploy": "wrangler deploy",
    "dev": "vite",
    "preview": "bun run build && vite preview",
    "test": "vitest --project unit & vitest --project browser",
    "lint": "oxlint --type-aware --fix",
    "lint:ci": "oxlint --type-aware",
    "format": "oxfmt .",
    "ui:add": "bun run scripts/shadcn-add.ts",
    "ui:organize": "bun run scripts/organize-ui.ts",
    "typecheck": "bun tsgo -b --noEmit"
  },
  "dependencies": {
    "@base-ui/react": "^1.2.0",
    "@fontsource-variable/noto-sans": "^5.2.10",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "hono": "^4.11.9",
    "lucide-react": "^0.564.0",
    "next-themes": "^0.4.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "shadcn": "^3.8.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.1",
    "tailwindcss": "^4.1.18",
    "ts-pattern": "^5.9.0",
    "vaul": "^1.1.2",
    "wouter": "^3.9.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.25.0",
    "@types/node": "^25.2.3",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@typescript/native-preview": "^7.0.0-dev.20260215.1",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint-plugin-better-tailwindcss": "^4.2.0",
    "lefthook": "^2.1.1",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "oxlint-tsgolint": "^0.13.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.9.3",
    "vite": "8.0.0-beta.14",
    "vitest": "^4.0.18",
    "vitest-browser-react": "^2.0.5",
    "wrangler": "^4.65.0"
  },
  "cloudflare": {
    "label": "Hono App Boilerplate",
    "products": [
      "Workers"
    ],
    "categories": [],
    "icon_urls": [
      "https://imagedelivery.net/wSMYJvS3Xw-n339CbDyDIA/5ca0ca32-e897-4699-d4c1-6b680512f000/public"
    ],
    "preview_image_url": "https://imagedelivery.net/wSMYJvS3Xw-n339CbDyDIA/fc7b4b62-442b-4769-641b-ad4422d74300/public",
    "publish": true
  }
}
